<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Deletion Page</title>
    <link rel="stylesheet" href="/css/remove.css" type="text/css" />
  </head>
  <body>
    <div id="header"><b>To delete a book, click on the red X button.</b></div>
    <div id="bookTable">
      <table>
        <% books.forEach(b=> { %>
        <tr>
          <td id="remove">
            <a
              href="<%= `/books/${b._id}/delete?_method=DELETE` %>"
              onclick="return confirm('Are you sure you want to delete this book from the database?')"
              >X</a
            >
          </td>
          <td><%= b.name %></td>
        </tr>
        <% }); %>
      </table>
    </div>
    <div id="footer"><%- include('partials/navigation') %></div>
  </body>
</html>
